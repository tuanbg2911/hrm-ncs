<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="contact_action" model="ir.actions.act_window">
        <field name="name">Hợp Đồng</field>
        <field name="res_model">contact</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="hop_dong_tree_view" model="ir.ui.view">
        <field name="name">Contact</field>
        <field name="model">contact</field>
        <field name="arch" type="xml">
            <tree>
                <field name="x_kpi_income"/>
            </tree>
        </field>
    </record>
    <record id="hop_dong_form_view" model="ir.ui.view">
        <field name="name">Hợp đồng</field>
        <field name="model">contact</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="2">
                        <group>
                            <div class="oe_title">
                                <h2>Đãi ngộ hàng tháng(Bằng tiền)</h2>
                            </div>
                            <field name="x_kpi_income"/>
                        </group>
                        <group>
                            <h2>Phụ cấp hàng tháng</h2>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="hr_contract_inherit" model="ir.ui.view">
        <field name="name">hr contract form</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="inside">
                <group>
                    <group string="Đãi ngộ hàng tháng(Bằng tiền)">
                        <label for="x_kpi_income"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="x_kpi_income"/><span>/month</span>
                        </div>
                        <label for="x_overtime_income"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="x_overtime_income"/><span>/month</span>
                        </div>
                        <label for="x_diligence"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="x_diligence" widget="motenary"/><span>/month</span>
                        </div>
                    </group>
                    <group string="Phụ cấp hàng tháng">
                        <label for="sup_home"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_home"/><span>/month</span>
                        </div>
                        <label for="sup_gas"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_gas"/><span>/month</span>
                        </div>
                        <label for="sup_food"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_food"/><span>/month</span>
                        </div>
                        <label for="sup_medical"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_medical"/><span>/month</span>
                        </div>
                        <label for="sup_other"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_other"/><span>/month</span>
                        </div>
                        <label for="sup_phone"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_phone"/><span>/month</span>
                        </div>
                        <label for="sup_da"/>
                        <div class="o_row mw-50" name="wage">
                            <field name="sup_da"/><span>/month</span>
                        </div>
                    </group>
                </group>
            </xpath>
        </field>
    </record>




</odoo>
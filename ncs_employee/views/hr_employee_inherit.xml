<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_inherit" model="ir.ui.view">
        <field name="name">hr employee form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']" position="inside">
                <group >
                    <group string="Người phụ thuộc">
                        <field name="number_people_deducted"/>
                        <field name="x_dependent">
                                <tree>
                                    <field name="x_name"/>
                                    <field name="x_dob"/>
                                    <field name="x_reduce"/>
                                    <field name="x_employee_id"/>
                                </tree>
                        </field>
                    </group>

                </group>

            </xpath>
            <xpath expr="//field[@name='birthday']" position="after">
                <field name="x_group_age" string="Nhóm tuổi"/>
            </xpath>
        </field>
    </record>
</odoo>